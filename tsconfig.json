{
  "compilerOptions": {             
    "lib": ["dom", "dom.iterable", "esnext"], //adiciona funcionalidades                             
    "allowJs": true, //permite arquivos Js e TSX
    "jsx": "react-jsx", 
    "noEmit": true,
    "strict": true, //modo strict do javascript
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"] //onde o codigo vai estar
}
